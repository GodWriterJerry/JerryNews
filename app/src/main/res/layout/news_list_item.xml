<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:clickable="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/zhihu_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/mid_grey_ripple"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:stateListAnimator="@animator/raise">

        <ImageView
            android:id="@+id/item_image_id"
            android:layout_width="93dp"
            android:layout_height="68dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="5dp"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:foreground="@drawable/mid_grey_ripple"
            android:padding="0.2dp"
            android:stateListAnimator="@animator/raise"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:stateListAnimator="@animator/raise"
                android:text="这是标题"
                android:textColor="@color/text_color"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_date_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:stateListAnimator="@animator/raise"
                    android:text="这是发布日期"
                    android:textColor="@color/text_source"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/item_authorName_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:stateListAnimator="@animator/raise"
                    android:text="这是发布者"
                    android:textColor="@color/text_source"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>